<div class="navbar p-5 bg-light mb-5">
  <h1>Collections</h1>
  <%= link_to "Add list", new_list_path, class: "btn btn-secondary m-3" %>
</div>

<div class="d-flex justify-content-around">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      <% end %>
      <br>
    <% end %>
</div>
